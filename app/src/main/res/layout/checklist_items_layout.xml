<!--            android:text="खरेदी करा"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:textColor="@color/white"-->
<!--            android:backgroundTint="#01786D"/>-->
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>